<div class="container mx-auto p-4">
  <h1 class="text-2xl mb-4">Editar País</h1>
  <% if (errores && errores.length > 0) { %>
      <div class="errores mb-4">
          <ul>
              <% errores.forEach(error => { %>
                  <li class="text-red-500"><%= error %></li>
              <% }); %>
          </ul>
      </div>
  <% } %>
  <form id="paisForm" action="/pais/<%= pais._id %>?_method=PUT" method="POST">
      <div class="mb-4">
          <label for="official" class="block">Nombre Oficial en Español:</label>
          <input type="text" id="official" name="name[nativeName][spa][official]" value="<%= pais.name.nativeName.spa.official %>" class="mt-1 p-2 w-full text-black" required>
      </div>
      <div class="mb-4">
          <label for="capital" class="block">Capital:</label>
          <input type="text" id="capital" name="capital[]" value="<%= pais.capital.join(', ') %>" class="mt-1 p-2 w-full text-black" required>
      </div>
      <div class="mb-4">
          <label for="borders" class="block">Fronteras (separadas por comas):</label>
          <input type="text" id="borders" name="borders" value="<%= pais.borders.join(', ') %>" class="mt-1 p-2 w-full text-black" placeholder="Ej: BLZ, GTM, USA" required>
      </div>
      <div class="mb-4">
          <label for="area" class="block">Área (en km²):</label>
          <input type="number" id="area" name="area" value="<%= pais.area %>" class="mt-1 p-2 w-full text-black" required>
      </div>
      <div class="mb-4">
          <label for="population" class="block">Población:</label>
          <input type="number" id="population" name="population" value="<%= pais.population %>" class="mt-1 p-2 w-full text-black" required>
      </div>
      <div class="mb-4">
          <label for="timezone" class="block">Zonas Horarias (formato: UTC-08:00):</label>
          <input type="text" id="timezone" name="timezones[]" value="<%= pais.timezones.join(', ') %>" class="mt-1 p-2 w-full text-black" placeholder="Ej: UTC-08:00, UTC-07:00">
      </div>
      <div class="mb-4">
          <label for="region" class="block">Región:</label>
          <input type="text" id="region" name="region" value="<%= pais.region %>" class="mt-1 p-2 w-full text-black" required>
      </div>
      <div class="mb-4">
          <label for="languages" class="block">Idiomas (separados por comas, ej: SPA, ENG):</label>
          <input type="text" id="languages" name="languages" value="<%= pais.languages ? Object.keys(pais.languages).join(', ') : '' %>" class="mt-1 p-2 w-full text-black" placeholder="Ej: SPA, ENG" required>
      </div>
      <button type="submit" class="bg-blue-500 text-white p-2">Guardar Cambios</button>
  </form>
</div>